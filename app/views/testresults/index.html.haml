- id = current_user.id
.main.main--indexTestresult{"data-id": id}
  .charts
    .wrapar
      %canvas#chart__highScore
    .wrapar
      %canvas#chart__averageScore
  .addChart__buttons
    .addChart__button
      = button_tag "Line"
    .addChart__button
      = button_tag "Bar"
    .addChart__button
      = button_tag "Radar"
  .charts.charts--empty
.sideBar.sideBar--indexTestresult
  .sideBar--indexTestresult__top
    %p 受験したテスト一覧
  .testresults
    - @testresults.each.with_index do |testresult,i|
      .testresult
        = link_to "#{testresult.test.wordbook.title}", user_testresult_path(current_user.id,testresult.id), class:"testresult__title"
        .testresult__score
          = "点数: #{testresult.score}"
        .testresult__time
          = l(testresult.created_at, format: :long)