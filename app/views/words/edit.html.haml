.main.main--newWord
  = form_for [@wordbook,@word], html:{class: "newWord"} do |f|
    .newWord__front
      = f.label :front, "表の言葉"
      = f.text_field :front, value: @word.front
    .newWord__reverse
      = f.label :reverse, "裏の言葉"
      = f.text_field :reverse, value: @word.reverse
    .newWord__submit
      = f.submit "登録"
